generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(VIEWER)
  evaluations Evaluation[]
  createdAt DateTime  @default(now())
}

model Vendor {
  id          Int          @id @default(autoincrement())
  name        String
  company     String?
  email       String?
  evaluations Evaluation[]
  createdAt   DateTime     @default(now())
}

model Evaluation {
  id          Int      @id @default(autoincrement())
  score       Int
  comment     String?
  segment     String
  evaluator   User     @relation(fields: [evaluatorId], references: [id])
  evaluatorId Int
  vendor      Vendor   @relation(fields: [vendorId], references: [id])
  vendorId    Int
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  EVALUATOR
  VIEWER
}

